## A LED goes on when the electricity goes out ##
#define ldr A0
#define relay 3
#define on 0
#define off 1
int threshold=40; //adjust it as you like 
int level;
void setup(){ 
Serial.begin(9600);
pinMode(relay,OUTPUT); 
}
void loop()
{
level= analogRead(ldr);
Serial.println(level);
if(level< threshold)
{digitalWrite(relay,on); }
else
{ digitalWrite(relay,off);}
}
